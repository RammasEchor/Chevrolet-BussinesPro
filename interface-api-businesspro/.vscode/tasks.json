{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/interface-api-businesspro.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/interface-api-businesspro.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "/property:PublishSingleFile=true",
                "--self-contained", "true",
                 "--os", "win"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish-to-watcher-project",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/interface-api-businesspro.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "/property:PublishSingleFile=true",
                "--self-contained", "true",
                 "--os", "linux",
                 "--output", "/home/rammas/repos/Chevrolet_DMS_Watcher/test_folder/"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/interface-api-businesspro.sln"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}